import "tfplan"
import "version"
import "region"

# This regular expression checks whether the Terraform version used for the plan is 0.14+, 0.15+, or 1.0+

main = rule {
  version.new(tfplan.terraform_version).greater_than("1.9.0")
}

# Define the required region
required_region = "eu-west-2"

main = rule {
  required_region(tfplan.region)is ("eu-west-2")
}